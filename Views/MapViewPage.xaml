<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="POIViewerMap.Views.MapViewPage"
             xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:mapsui="clr-namespace:Mapsui.UI.Maui;assembly=Mapsui.UI.Maui"
             xmlns:resource="clr-namespace:POIViewerMap.Resources.Strings"
             Title="POI Viewer Map">
    <Page.Behaviors>
        <mct:StatusBarBehavior StatusBarColor="{StaticResource colorPrimaryDark}"/>
    </Page.Behaviors>
    <ContentPage.Content>
        <StackLayout>
            <mct:Expander BackgroundColor="White" IsVisible="True" x:Name="expander">
                <mct:Expander.Header>
                    <Label HorizontalOptions="Center" Text="{x:Static resource:AppResource.Options}" FontSize="16" FontAttributes="Bold"/>
                </mct:Expander.Header>
                <mct:Expander.Content BackgroundColor="LightGrey">
                    <VerticalStackLayout>
                        <StackLayout Margin="0,0,0,0" Orientation="Horizontal">
                            <Label Margin="5,12,5,0" TextColor="Black" FontAttributes="None" FontSize="15">
                                <OnPlatform x:TypeArguments="x:String">
                                    <On Platform="Android, iOS" Value="{x:Static resource:AppResource.POIViewerMapPOIsLabelText}"/>
                                    <On Platform="Windows" Value="" />
                                </OnPlatform>
                            </Label>
                            <Label x:Name="POITypeLabel" Margin="0,13,0,0" FontAttributes="Bold"/>
                        </StackLayout>
                        <HorizontalStackLayout HorizontalOptions="Fill">
                            <Label Text="Max Distance: " Margin="5,12,0,0"/>
                            <Label x:Name="MaxDistanceLabel" Text="10" Margin="0,12,0,0"/>
                            <Label Text="km" Margin="0,12,5,0"/>
                            <Stepper x:Name="MaxStepper" Value="10" Maximum="50" Minimum="1" Increment="1" HorizontalOptions="Start" Margin="0,0,5,0" ValueChanged="OnStepperValueChanged" />
                        </HorizontalStackLayout>
                        <HorizontalStackLayout Margin="5,0,0,0">
                            <Label x:Name="FilepathTitleLabel" FontSize="15" TextColor="Black" Text="{x:Static resource:AppResource.TXTFilepathLabelText}"/>
                            <Label x:Name="FilepathLabel" Margin="5,0,0,0" LineBreakMode="TailTruncation" FontSize="15" TextColor="{StaticResource Yellow100Accent}" FontAttributes="Bold"/>
                        </HorizontalStackLayout>
                        <Button Margin="5" Text="{x:Static resource:AppResource.POIBrowseButtonText}" Clicked="BrowseButton_Clicked"/>
                    </VerticalStackLayout>
                </mct:Expander.Content>
            </mct:Expander>
            <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="75"/>
                </Grid.RowDefinitions>
                <mapsui:MapView x:Name="mapView" 
                            Grid.Row ="0" Grid.Column="1" Grid.RowSpan="3"
                            VerticalOptions="FillAndExpand"
                            HorizontalOptions="FillAndExpand"
                            BackgroundColor="Gray" 
                            Margin="0" />
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>